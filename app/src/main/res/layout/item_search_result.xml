    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_general_large"
    android:layout_marginTop="@dimen/dp_general_small"
    android:layout_marginEnd="@dimen/dp_general_large"
    android:background="@color/colorGrayLight"
    android:orientation="horizontal"
    android:padding="@dimen/dp_general_middle">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_result_user_icon_riv"
        android:layout_width="@dimen/dp_item_logo_size"
        android:layout_height="@dimen/dp_item_logo_size"
        app:riv_oval="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_general_normal"
        android:layout_marginEnd="@dimen/dp_general_normal"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_result_username_tv"
            style="@style/SearchResultTextContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_general_large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_result_play_time_tv"
            style="@style/SearchResultTextContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/item_result_user_label_tv"
