<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Games"
            android:textSize="@dimen/sp_general_large"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/activity_user_game_btn_add_game"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_general_normal"
            android:layout_marginEnd="@dimen/dp_general_normal"
            android:src="@drawable/ic_add_game"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@drawable/shape_vertical_line"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_user_game_recycler_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>